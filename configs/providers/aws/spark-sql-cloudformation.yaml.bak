AWSTemplateFormatVersion: 2010-09-09
Description: AWS CloudFormation template about AWS EMR.
Parameters:
  KeyName:
    Description: Name of an existing EC2 KeyPair to enable SSH access to the instance.
    Type: AWS::EC2::KeyPair::KeyName
    Default: key_raven
    ConstraintDescription: must be the name of an existing EC2 KeyPair.
  ReleaseLabel:
    Type: String
    Default: emr-5.33.0
  MasterInstanceType:
    Type: String
    Default: m5.xlarge
  MasterInstanceCount:
    Type: Number
    Default: 1
  CoreInstanceType:
    Type: String
    Default: m5.xlarge
  CoreInstanceCount:
    Type: Number
    Default: 2
  TerminationProtected:
    Type: String
    Default: false
Resources:
  EMRCluster:
    Type: AWS::EMR::Cluster
    Properties:
      Name: EMR-Raven-SparkSQL
      Tags:
        - Key: Project
          Value: Raven
        - Key: OLAP Engine
          Value: SparkSQL
      ReleaseLabel: !Ref ReleaseLabel
      Applications:
        - Name: Hadoop
        - Name: Hive
        - Name: Spark
      Configurations:
        - Classification: hive-site
          ConfigurationProperties:
            hive.metastore.client.factory.class: com.amazonaws.glue.catalog.metastore.AWSGlueDataCatalogHiveClientFactory
        - Classification: spark-hive-site
          ConfigurationProperties:
            hive.metastore.client.factory.class: com.amazonaws.glue.catalog.metastore.AWSGlueDataCatalogHiveClientFactory
      Instances:
        Ec2KeyName: !Ref KeyName
        MasterInstanceGroup:
          InstanceCount: !Ref MasterInstanceCount
          InstanceType: !Ref MasterInstanceType
          Market: ON_DEMAND
          Name: master
        CoreInstanceGroup:
          InstanceCount: !Ref CoreInstanceCount
          InstanceType: !Ref CoreInstanceType
          Market: ON_DEMAND
          Name: core
        TerminationProtected: !Ref TerminationProtected
      ServiceRole: EMR_DefaultRole
      JobFlowRole: EMR_EC2_Role_Raven
Outputs:
  EMRClusterID:
    Description: The ID of EMR cluster.
    Value: !Ref EMRCluster
